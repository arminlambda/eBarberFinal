@model eBarber.Models.Termin
@inject Microsoft.AspNetCore.Identity.SignInManager<eBarber.Models.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Nova rezervacija";
}

<h1>Nova rezervacija termina</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="DatumInUra" class="control-label">Datum in ura</label>
                <input asp-for="DatumInUra" class="form-control" type="datetime-local" />
                <span asp-validation-for="DatumInUra" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LokacijaId" class="control-label">Lokacija</label>
                <select asp-for="LokacijaId" class="form-control" asp-items="ViewBag.LokacijaId"></select>
                <span asp-validation-for="LokacijaId" class="text-danger"></span>
            </div>
            
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
            {
                <div class="form-group mb-3">
                    <label asp-for="StrankaId" class="control-label">Stranka</label>
                    <select asp-for="StrankaId" class="form-control" asp-items="ViewBag.StrankaId"></select>
                    <span asp-validation-for="StrankaId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Čaka">Čaka</option>
                        <option value="Potrjen">Potrjen</option>
                        <option value="Zaključen">Zaključen</option>
                        <option value="Preklican">Preklican</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            
            <div class="form-group mb-3">
                <label asp-for="Opombe" class="control-label">Opombe</label>
                <textarea asp-for="Opombe" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Opombe" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Rezerviraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}