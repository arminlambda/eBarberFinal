@model IEnumerable<eBarber.Models.Message>

@{
    ViewData["Title"] = "Sporoƒçila";
}

<h1>üí¨ Sporoƒçila uporabnikov</h1>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Od</th>
            <th>Sporoƒçilo</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr class="@(msg.IsRead ? "" : "table-warning")">
                <td>@msg.SentAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@msg.Sender?.Email</td>
                <td>@msg.Content</td>
                <td>
                    @if (msg.IsRead)
                    {
                        <span class="badge bg-secondary">Prebrano</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Novo</span>
                    }
                </td>
                <td>
                    @if (!msg.IsRead)
                    {
                        <form asp-action="MarkAsRead" method="post" style="display:inline;">
                            <input type="hidden" name="messageId" value="@msg.Id" />
                            <button type="submit" class="btn btn-sm btn-primary">Oznaƒçi kot prebrano</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>